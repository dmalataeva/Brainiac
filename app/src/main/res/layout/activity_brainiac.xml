<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_brainiac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:background="@drawable/bg"
    tools:context="dmalataeva.brainiac.BrainiacActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/selector_button_play"
        android:id="@+id/play"
        android:layout_above="@+id/highscores"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/selector_button_highscores"
        android:id="@+id/highscores"
        android:layout_above="@+id/exit"
        android:layout_alignLeft="@+id/play"
        android:layout_alignStart="@+id/play" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/selector_button_exit"
        android:id="@+id/exit"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/highscores"
        android:layout_alignStart="@+id/highscores"
        android:layout_marginBottom="19dp" />

</RelativeLayout>
